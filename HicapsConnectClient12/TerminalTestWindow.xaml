<Window x:Class="HicapsConnectClient12.TerminalTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Terminal Test" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="194" d:DesignWidth="177" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Padding="5,10,5,5" MaxWidth="400" Width="350" Background="{StaticResource TabControl_BackgroundBrush_Base}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Name="StatusLabel" MinHeight="50" FontSize="20" FontStyle="Normal" Width="Auto" TextWrapping="Wrap" TextAlignment="Center" Margin="10,10,10,0" />
        <TextBlock Grid.Row="1" Name="ResponseLabel" MinHeight="50" Margin="10,10,10,0" />
        <Button Grid.Row="2" Name="DismissButton" Content="Close" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="10,2" Click="DismissButton_Click" Margin="2,5" />
    </Grid>
</Window>
